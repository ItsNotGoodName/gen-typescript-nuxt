{{define "types"}}
//
// Types
//

{{- if .Messages -}}
{{range .Messages -}}

{{if .Type | isEnumType -}}
{{$enumName := .Name}}
export enum {{$enumName}} {
{{- range $i, $field := .Fields}}
  {{- if $i}},{{end}}
  {{$field.Name}} = '{{$field.Name}}'
{{- end}}
}
{{end -}}

{{- if .Type | isStructType  }}
export interface {{.Name | tsInterfaceName}} {
  {{- range .Fields}}
  {{- $isExportable := true -}}
  {{- range $meta := .Meta -}} 
      {{- if eq (get $meta "json") "-" -}}
        {{- $isExportable = false}}
      {{- end -}}
  {{- end }}
  {{if $isExportable -}}{{template "fieldName" dict "Field" .}}{{if .Optional}}?{{end}}: {{.Type | tsFieldType}}{{- end -}}
  {{- end}}
}
{{end -}}
{{end -}}
{{end -}}

{{if .Services}}
{{- range .Services}}
export interface {{.Name | tsServiceInterfaceName}} {
{{- range .Methods}}
  {{.Name | tsMethodName}}({{. | tsMethodInputs}}): {{. | tsMethodOutputs}}
{{- end}}
}

{{range .Methods -}}
export interface {{. | tsMethodArgumentInputInterfaceName}} {
{{- range .Inputs}}
  {{.Name}}{{if .Optional}}?{{end}}: {{.Type | tsFieldType}}
{{- end}}
}

export interface {{. | tsMethodArgumentOutputInterfaceName}} {
{{- range .Outputs}}
  {{.Name}}{{if .Optional}}?{{end}}: {{.Type | tsFieldType}}
{{- end}}  
}
{{end}}

{{- end}}
{{end -}}

{{end}}
